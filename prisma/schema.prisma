generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id        Int       @id @default(autoincrement())
  nome      String
  marca     String? // marca pode ser null
  categoria String
  preco     Float
  estoque   Int?
  sku       String    @unique
  validade  DateTime? // validade pode ser null
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("products")
}

model Sale {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  total         Float
  paymentMethod String
  items         SaleItem[]

  @@map("sales")
}

model SaleItem {
  id          Int    @id @default(autoincrement())
  sale        Sale   @relation(fields: [saleId], references: [id])
  saleId      String
  productSku  String
  productName String
  price       Float
  quantity    Int

  @@map("sale_items")
}
